<template name="OrderPrompt"><view class="order-prompt {{ list.length > 1 ? 'order-prompt-condensed' : '' }}" wx:if="{{ isShowOrderPrompt && list.length }}"><view class="order-prompt-header"><view class="order-prompt-title"><image src="/images/order-prompt/icon.png"/>取票提醒<text wx:if="{{ list.length > 1 }}" class="order-prompt-num">（{{ list.length }}个）</text></view><image bindtap="onTapOrderPromptClose" class="order-prompt-close" src="/images/order-prompt/close.png"/></view><scroll-view class="order-prompt-body" scroll-x><view class="order-prompt-list"><view bindtap="onTapNavi" data-url="/pages/order/order?orderId={{ item.id }}" wx:for="{{ list }}" class="order-prompt-item"><view class="order-prompt-item-left"><view class="order-prompt-name">{{ item.cinema.name }}</view><view class="order-prompt-time">{{ item.timeMsg }}</view><view class="order-prompt-code" wx:if="{{ item.exchange.originId }}"><text class="order-prompt-code-key">{{ item.exchange.originIdName }}：</text><text class="order-prompt-code-value">{{ item.exchange.originIdChunk || item.exchange.originId }}</text></view><view class="order-prompt-code" wx:if="{{ item.exchange.exchangeCode }}"><text class="order-prompt-code-key">{{ item.exchange.exchangeCodeName }}：</text><text class="order-prompt-code-value">{{ item.exchange.exchangeCodeChunk || item.exchange.exchangeCode }}</text></view></view><view class="order-prompt-item-right"><view class="order-prompt-timediff"><view>{{ item.timediffMsgArr[0] }}</view><view>{{ item.timediffMsgArr[1] }}</view></view><image wx:if="{{ item.exchange.qrcode }}" catchtap="onTapOrderPromptQrcode" data-qrcode="{{ item.exchange.qrcode }}" class="order-prompt-qrcode" src="/images/order-prompt/qrcode.png"/></view></view></view></scroll-view></view></template>