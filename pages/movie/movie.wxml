<import src="_comment.wxml"/><import src="_order-prompt.wxml"/><import src="_red.wxml"/><view id="myModalDialog" bindtap="onTapModalOverlay" wx:if="{{ myModalDialog.display }}" class="overlay"><view class="modal modal-celebrity"><text class="cnm">{{ celebrity.cnm }}</text><text class="enm">{{ celebrity.enm }}</text><image wx:if="{{ celebrity.avatar }}" class="img img-avatar pull-right" src="{{ celebrity.avatar }}" mode="aspectFill"/><text class="roles">{{ celebrity.type == '导演' ? celebrity.type : (celebrity.roles ? '饰: ' + celebrity.roles : celebrity.type) }}</text></view></view><view class="page" wx:if="{{movie}}"><template is="OrderPrompt" data="{{ ...OrderPrompt }}"/><view class="movie-header"><view class="movie-header-bg" style="background-image: url({{ movie.img }})"></view><view class="movie-header-inner"><view class="flex"><image class="img movie-img" src="{{ movie.img }}" bindtap="onTapMovieImage" bindload="onImageLoaded"><navigator wx:if="{{ movie.vd }}" catchtap="onTapNavi" data-url="/pages/movie/preview?movieId={{movie.id}}"><image src="/images/play.png" mode="aspectFill" class="img-play"/></navigator></image><view class="movie-info"><text class="movie-name text-ellipsis">{{ movie.nm }}</text><text class="movie-name-en text-ellipsis">{{ movie.enm }}</text><view class="movie-score {{ movie.scoreStyle }}"><view class="movie-score-user"><image wx:for="{{ movie.stars }}" wx:for-item="star" wx:key="{{ index }}" class="star" src="/images/star-{{ star }}.png"></image><text class="movie-score-value">{{ movie.score }}</text><text class="movie-score-total">{{ movie.snum }}</text></view><navigator class="movie-score-pro" catchtap="onTapNavi" data-url="./pro-comment?movieId={{movie.id}}&movieName={{movie.nm}}"><text class="movie-score-value">{{ movie.proScoreText }}</text><text class="movie-score-total">{{ movie.proScoreNum }}</text></navigator><view class="movie-wish">{{ movie.wish }}</view></view><text class="movie-cat">{{ movie.cat }}</text><text class="version {{ movie.version }}"></text><view class="movie-show"><text>{{ movie.src }}</text><text wx:if="{{ movie.dur }}">/ {{ movie.dur }}分钟</text></view><text wx:if="{{ movie.pubDesc }}" class="movie-publish">{{ movie.pubDesc }}</text></view></view><view class="movie-button"><view class="btn" bindtap="onTapLike" data-val_bid="{{ movie.wishst ? 'b_0elx4l0v' : 'b_27362wna'  }}"><image class="icon icon-wish" mode="aspectFit" src="/images/heart-{{ (icm && !diy || movie.wishst) ? 'full' : 'empty'}}.png"></image><text>{{ icm && !diy ? '看过' : (movie.wishst ? '已想看' : '想看') }}</text></view><navigator class="btn {{ icm ? 'scored' : '' }}" data-val_bid="b_tq60c81q" catchtap="onTapNavi" data-need-login="{{ !diy }}" data-login-warn="评分前请先登录" data-url="{{ diy.reviewPage || '/pages/movie/review' }}?movieId={{ movie.id }}&required=score"><image class="icon icon-star" mode="aspectFit" src="/images/star-{{ icm ? 'full' : 'empty' }}.png"></image><text>{{ icm.score ? icm.scoreText : '评分' }}</text></navigator></view></view></view><view wx:if="{{ movie.egg }}" class="panel movie-egg"><view class="panel-content"><image class="img img-icon" src="/images/egg.png"></image><text>{{ egg.desc }}</text></view></view><view wx:if="{{ movie.dra && movie.dra != '暂无剧情简介' }}" class="panel movie-intro collapse collapse-{{ collapse }}" bindtap="onTapIntro" data-val_bid="b_l45iiim4" data-val_lab="{ movieId: {{ movie.id }}, isCollapse: {{ collapse ? 1 : 0 }} }"><text class="panel-content collapse-content">{{ movie.dra }}</text></view><view wx:if="{{ celebrities.length }}" class="panel panel-no-split panel-full-width movie-celebrity"><text class="panel-title">演职人员</text><scroll-view scroll-x="true" class="panel-content"><view class="panel-scroll"><view class="celebrity" wx:for="{{ celebrities }}" data-cnm="{{ item.cnm }}" data-enm="{{ item.enm }}" data-type="{{ item.type }}" data-roles="{{ item.roles }}" data-avatar="{{ item.still }}" data-val_bid="b_pioynxbn" wx:key="{{ item.id }}" bindtap="onTapCelebrity"><image src="{{ item.avatar }}" class="img" mode="aspectFill"/><text class="celebrity-cnm">{{ item.cnm ? item.cnm : item.enm }}</text><text class="celebrity-enm">{{ item.roles ? item.roles : item.type }}</text></view></view></scroll-view></view><view wx:if="{{ mbox.length }}" class="panel panel-no-split movie-box"><text class="panel-title">票房</text><view class="panel-content"><view wx:for="{{ mbox }}" wx:key="{{ index }}" wx:for-item="box" class="box box-{{!!box.rank}}"><text class="box-rank">{{ box.rank ? box.rank : '暂无' }}</text><text class="box-text">{{ box.text }}</text></view></view></view><view wx:if="{{ movie.photos.length || movie.vd }}" class="panel panel-no-split panel-full-width movie-preview"><view class="panel-title"><text>视频和剧照</text><navigator catchtap="onTapNavi" data-val_bid="b_sih3agmh" data-url="/pages/movie/photo?movieId={{movie.id}}&movieName={{movie.nm}}" class="pull-right text-arrow">{{ movie.pn }}</navigator></view><scroll-view scroll-x="true" class="panel-content"><view class="panel-scroll"><navigator wx:if="{{ movie.vd }}" class="inline" catchtap="onTapNavi" data-url="/pages/movie/preview?movieId={{movie.id}}" data-val_bid="b_ztuh6431"><image src="{{ movie.videoImg }}" mode="aspectFill" class="img img-video"><image src="/images/play.png" mode="aspectFill" class="img-play"/></image></navigator><image class="img" data-val_bid="b_ztuh6431" bindtap="onTapPhoto" wx:for="{{ movie.photos }}" wx:key="{{ index }}" wx:for-item="photo" wx:key="{{ photo }}" data-index="{{ index }}" src="{{ photo }}" mode="aspectFill"/></view></scroll-view></view><view wx:if="{{comments_total}}" class="panel movie-comments"><view class="panel-title"><navigator class="btn btn-plain btn-radius pull-right" catchtap="onTapNavi" data-val_bid="b_4t7ohpml" data-need-login="{{ !diy }}" data-login-warn="写短评前请先登录" data-url="{{ diy.reviewPage || '/pages/movie/review' }}?movieId={{ movie.id }}&required=comment">{{ icm ? '我的短评' : '写短评' }}</navigator><text>观众评论</text></view><view class="list-view panel-content"><view wx:for="{{ comments }}" wx:key="{{ index }}" wx:for-item="comment" class="list-view-item"><template is="comment" data="{{ ...comment, index, theme, diy, bid:'b_cgpgcan5' }}"/></view></view><navigator wx:if="{{ comments_total > 3 }}" class="panel-footer more" catchtap="onTapNavi" data-url="{{ diy.commentPage || '/pages/movie/comment' }}?movieId={{ movie.id }}&movieName={{movie.nm}}" data-val_bid="b_yst5cq6y">查看全部{{comments_total}}条观众评论</navigator><view wx:if="{{ !comments }}" class="comments-empty"><image src="/images/talk.png" mode="aspectFit"></image></view></view><view wx:if="{{reviews_total}}" class="panel movie-reviews"><text class="panel-title">专业评论</text><view class="list-view panel-content"><view wx:for="{{ reviews }}" wx:key="{{ index }}" wx:for-item="comment" class="list-view-item"><template is="comment" data="{{ ...comment, index, theme, type: 'pro' }}"/></view></view><navigator wx:if="{{ reviews_total > 3 }}" class="panel-footer more" catchtap="onTapNavi" data-url="./pro-comment?movieId={{movie.id}}&movieName={{movie.nm}}" data-val_bid="b_acj2mbya">查看全部{{reviews_total}}条专业评论</navigator></view><view wx:if="{{ movie.buy }}" class="placeholder"></view><navigator hover-class="none" wx:if="{{ movie.buy }}" class="btn btn-block fixed fixed-bottom" catchtap="onTapNavi" data-url="/pages/cinema/movie?movieId={{movie.id}}">优惠购票</navigator></view><template is="red" data="{{showRed, userId}}"/><include src="/footer.wxml" />
