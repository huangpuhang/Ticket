<template name="comment"><view class="comment"><image class="head-img" src="{{avatarurl}}"></image><view class="main"><view class="pro-score" wx:if="{{pro}}">{{score}}</view><view class="name"><text>{{nickName}}</text><block wx:if="{{!pro}}"><text class="tag" wx:if="{{tagDy}}">点映</text><text class="tag buy" wx:elif="{{tagBuy}}">购</text></block></view><view class="score"><block wx:if="{{pro}}">{{authInfo}}</block><block wx:elif="{{score === 0}}">未评分</block><block wx:else><block wx:for="{{scoreArray}}" wx:key="index"><image src="../../images/star-{{item}}.png"/></block></block></view><view class="content">{{content}}</view><view class="footer"><view class="time">{{tm}}</view><view wx:if="{{!diy}}" class="approve {{approved ? 'approved' : ''}}" data-id="{{id}}" data-approved="{{approved}}" data-index="{{index}}" data-type="{{type}}" data-val_bid="{{ bid }}" data-val_lab="{movieId: {{ movieId }}, commentId: {{ id }}}" bindtap="toggleApprove"><image src="../../images/{{theme}}{{approved ? 'approved' : 'approve'}}.png"/>{{approve || '赞'}}<view wx:if="{{animation}}" class="plus">+1</view></view></view></view></view></template>