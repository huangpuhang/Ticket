<template name="mobile-login"><form bindsubmit="onSubmitMobileLogin"><view class="input-container"><view class="input-block"><text class="input-name">手机号</text><input class="input" name="mobile" type="number" maxlength="11" bindinput="onInputMobile" value="{{inputMobile}}" placeholder="仅支持中国大陆手机号" placeholder-class="placeholder"/><view class="btn-del line-middle"><image wx:if="{{showMobileDel}}" bindtap="onDeleteMobile" src="/images/close.png"/></view><view class="btn-getcode {{codeBtnDisabled ? 'disabled' : ''}} {{codeHasSent ? 'sent' : ''}}" bindtap="onTapGetCode" data-disabled="{{ !!codeBtnDisabled }}">{{codeBtnMsg}}</view></view><view class="input-block code-input-block"><text class="input-name">验证码</text><input class="input" name="code" type="number" bindinput="onInputCode" value="{{inputCode}}" placeholder="请输入验证码" placeholder-class="placeholder"/><view class="btn-del line-middle"></view></view></view><view class="btn-container" style="text-align: center;margin-top: 50rpx;padding: 0 30rpx"><button class="btn-login {{submitDisabled ? 'submit-disabled' : ''}}" formType="submit" disabled="{{submitDisabled}}">登录</button></view></form></template>