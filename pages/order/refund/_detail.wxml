<template name="infoItem"><view class="infoItem {{isFirst? '': 'one-px-border-top'}}"><text class="infoItem-title">{{ info }}</text><view wx:if="{{ isList&&value }}"><view wx:for="{{ textList }}" class="infoItem-text"><view>{{ item }}</view></view></view><view wx:else="{{ value }}" class="{{isMoney? 'color-red': ''}}">{{ text }}<view wx:if="{{ remarks }}" class="color-lightGray inline">{{remarks}}</view></view></view></template><template name="processItem"><view class="processItem processItem{{code}}"><image src="/images/{{theme}}refund-icon-{{code}}.png" class="processItemIcon"></image><view>{{title}}</view><view class="text color-lightGray">{{desc}}</view><view class="text color-lightGray">{{time}}</view></view></template><view wx:if="{{ totalMoney }}"><view class="panel"><template is="infoItem" class="money" data="{{...totalMoney}}"></template><template is="infoItem" wx:if="{{promoDetail.value}}" data="{{...promoDetail}}"></template><template is="infoItem" wx:if="{{accounts.value}}" data="{{...accounts}}"></template><template is="infoItem" wx:if="{{time.value}}" data="{{...time}}"></template></view><view wx:if="{{ process.mySteps.length }}" class="panel"><view class="panel-title">退款流程</view><view class="panel-content"><view wx:for="{{ process.mySteps }}" class="processList"><view class="{{ index+1 == process.mySteps.length?'last':'' }}"><template is="processItem" data="{{theme, ...item}}"></template></view></view></view><view wx:if="{{ process.mtSteps.length>1 }}" wx:for="{{ process.mtSteps }}" class="bg one-px-border-top" wx:for-item="parent" wx:for-index="p"><view class="leftPadding"><view wx:if="{{ p == 0 }}" class="multipleTitle">分为{{process.mtSteps.length}}笔退款</view><view class="processTitle">{{parent.text}}</view><view wx:for="{{parent.nodes}}" class="processList" wx:for-item="child" wx:for-index="c"><view class="{{ c+1 == parent.nodes.length?'last':'' }}"><template is="processItem" data="{{theme, ...child}}"></template></view></view></view></view></view><view class="memo">客服电话：<text class="color-phone" bindtap="phoneCall" data-num="1010-5335">1010-5335</text></view></view>