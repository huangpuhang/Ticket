<import src="_apply.wxml"/><view wx:if="{{ count }}"><view class="info-cell one-px-border-both"><view class="infoItem title">退还次数</view><view class="infoItem text one-px-border-top">本月可退次数：剩余{{count.remain}}次（共{{count.max}}次）</view></view><view class="info-cell one-px-border-both"><view class="infoItem title">退还方式</view><view class="infoItem one-px-border-top"><text class="text">{{mode.info}}</text><text class="remarks">{{' '+mode.remarks+' '}}</text></view></view><view wx:if="cashierMoney.value" class="info-cell one-px-border-both"><view class="infoItem title">退还现金</view><template is="listItem" data="{{...cashierMoney}}"></template><template wx:if="{{ refundFee.value }}" is="listItem" data="{{...refundFee}}"></template><template wx:if="{{ refundFee.value }}" is="listItem" data="{{...refundMoney}}"></template></view><view wx:if="{{ couponMoney.value || pointCardMoney.value}}" class="info-cell one-px-border-both"><view class="infoItem title" wx:if="{{ couponMoney.value && pointCardMoney.value}}">退还券/点数</view><view class="infoItem title" wx:elif="{{ couponMoney.value }}">退还优惠券</view><view wx:if="{{ couponMoney.value }}"><template is="listItem" data="{{...couponMoney}}"></template></view><view wx:if="{{ pointCardMoney.value }}"><template is="listItem" data="{{...pointCardMoney}}"></template></view></view><button class="apply-btn" bindtap="applyRefundFunc">提交退票申请</button><view class="warning">提交退票申请后不可取消</view></view><modal title="确认提交" confirm-text="确定" cancel-text="取消" hidden="{{modalHidden}}" bindconfirm="modalConfirm" bindcancel="modalCancel">{{modalText}}</modal><include src="/footer.wxml" />
