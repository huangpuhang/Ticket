<import src="../../wxParse/wxParse.wxml" /><view class="create {{ishide == 1 ? 'm-hide' : ''}}" hidden="{{!showCreate}}"><canvas canvas-id="myCanvas"></canvas><view class="create_btn"><button size="mini" bindtap="closeCreate">放弃分享</button><button size="mini" bindtap="saveImg">保存图片</button></view></view><scroll-view scroll-y class="container" hidden="{{hiddenWrap}}"><view class="article"><view class="art_author"><view class="art_author_logo"><image src="{{newsInfo.publishLogo}}" mode="widthFix"></image></view><view class="art_author_name"><text>{{newsInfo.publishName}}</text><text>{{newsInfo.publishtime}}</text></view></view><view class="art_cnt"><view class="art_cnt_title">{{newsInfo.title}}</view><view class="art_cnt_main {{isHideNews ? '' : 'art_cnt_show'}}"><template is="wxParse" data="{{wxParseData:article.nodes}}" /></view><view class="art_cnt_all" wx:if="{{isHideNews}}" bindtap="showCompleteNews"><image src="../../images/article-all.png" mode="widthFix"></image></view><view class="art_cnt_bottom"><view><text>原页面经mediago转码整理 文章来源</text><text class="color_normal">{{newsInfo.publishName}}</text></view></view></view></view><view class="random"><view class="movie_title">猜你喜欢</view><view class="list"><block wx:for="{{randomNews}}" wx:key="index"><view class="list_item" wx:if="{{!item.isOne}}" data-newsid="{{item.newID}}" bindtap="newsDetailTap"><view class="list_item_title">{{item.title}}</view><view class="list_item_imgs"><view class="list_ii_img"><image wx:for="{{item.images}}" wx:for-item="img" wx:for-index="imgIndex" wx:key="imgIndex" src="{{img}}" mode="widthFix"></image></view></view><view class="list_item_outline">{{item.summary}}</view><view class="list_item_info"><view class="list_ii_icon"></view><view class="list_ii_cnt"><text>{{item.publishtime}}</text><text>阅读 {{item.count}}</text><text>点赞 {{item.LikeCount}}</text><text class="list_lic_type" wx:if="{{item.NewTopType}}">{{item.NewTopType}}</text></view><view class="list_ii_icon"></view></view></view><view class="list_item" wx:else data-newsid="{{item.newID}}" bindtap="newsDetailTap"><view class="list_item_one"><view class="list_io_title"><view>{{item.title}}</view><view>{{item.summary}}</view></view><view class="list_io_img"><image wx:for="{{item.images}}" wx:for-item="img" wx:for-index="imgIndex" wx:key="imgIndex" src="{{img}}" mode="widthFix"></image></view></view><view class="list_item_info"><view class="list_ii_icon"></view><view class="list_ii_cnt"><text>{{item.publishtime}}</text><text>阅读 {{item.count}}</text><text>点赞 {{item.LikeCount}}</text><text class="list_lic_type" wx:if="{{item.NewTopType}}">{{item.NewTopType}}</text></view><view class="list_ii_icon"></view></view></view></block></view></view><view class="ads"><block wx:for="{{news.Items}}" wx:key="index"><image src="{{item.images}}" mode="widthFix" data-url="{{item.images}}" bindtap="previewImage"></image></block></view><view class="item-flexbox-vh-c toast" wx:if="{{isToast}}"><text>{{toastCnt}}</text></view></scroll-view>