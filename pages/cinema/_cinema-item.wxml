<template name="cinema"><navigator url="/pages/cinema/cinema?movieId={{movieId}}&cinemaId={{cinemaId}}&cinemaName={{cinemaName}}&cinemaAddress={{cinemaAddress}}&latitude={{latitude}}&longitude={{longitude}}&cinemaTelephone={{cinemaTelephone}}" open-type="{{openType || 'navigate'}}"><view class="cinema-container {{noline ? '' : 'one-px-border-bottom'}}"><view class="label" wx:if="{{ mark === 3 }}">会员</view><view class="label" wx:if="{{ mark === 2 }}">常去</view><view class="label" wx:if="{{ mark === 1 }}">常去</view><view class="cinema-name text-ellipsis">{{ cinemaName }}</view><view class="price" wx:if="{{showPrice && showPrice != 0}}"><text class="num">{{ sellPrice }}</text><text>元起</text></view><view class="address text-ellipsis">{{ cinemaAddress }}</view><view class="distance" wx:if="{{resolvedDistance}}">{{ resolvedDistance }}</view><view class="tag-list"><view wx:if="{{tag.sell || sell}}">座</view><view wx:if="{{tag.deal || deal}}">团</view><block wx:for="{{tag.hallType || hallType}}" wx:key="{{ index }}"><view>{{item}}</view></block><view wx:if="{{tag.allowRefund || allowRefund}}">退</view><view wx:if="{{tag.endorse || endorse}}">改签</view><view wx:if="{{tag.snack || snack}}" class="featrue">小吃</view><view wx:if="{{tag.vipTag || vipTag}}" class="featrue">{{tag.vipTag}}</view></view><view wx:if="{{promotion.platformActivityTag}}" class="activity-tag platform-activity-tag">{{promotion.platformActivityTag}}</view><view wx:if="{{promotion.merchantActivityTag}}" class="activity-tag merchant-activity-tag">{{promotion.merchantActivityTag}}</view><view wx:if="{{promotion.cardPromotionTag}}" class="activity-tag card-promotion-tag">{{promotion.cardPromotionTag}}</view><view wx:if="{{promotion.couponPromotionTag}}" class="activity-tag coupon-promotion-tag">{{promotion.couponPromotionTag}}</view></view></navigator></template>