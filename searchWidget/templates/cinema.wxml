<view class="cinema-cell" wx:if="{{ data }}"><view class="cinema-info"><image class="poster" src="{{ data.img }}"></image><view class="cinema-detail"><text class="name">{{ data.cinema_name }}</text><view class="detail-item"><text class="detail-key">地址：</text><text class="detail-value address">{{ data.cinema_address }}</text></view><view class="detail-item"><text class="detail-key">电话：</text><text class="detail-value">{{ data.cinema_telephone }}</text></view><view class="detail-item"><text class="detail-key">价格：</text><text class="detail-value">{{ data.cinema_price }}元起</text></view></view></view><view class="movie-list"><view wx:for="{{ data.cinema_movie_list }}" class="movie-cell"><view class="movie-deal {{ index === data.cinema_movie_list.length - 1 ? 'last-cell' : '' }}"><text class="movie-nm">{{ item.movie_name }}</text><view class="movie-price"><text class="price-num">{{ item.movie_price }}</text><text class="price-suffix">元起</text></view></view></view></view></view><view class="no-result-wrapper" wx:else><text class="no-result">未查询到{{ query }}的相关信息</text></view>