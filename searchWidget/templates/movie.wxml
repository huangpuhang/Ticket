<view class="result" wx:if="{{ errCode === 0 && data }}"><view class="header"><text>购买电影票</text></view><view class="movie-cell"><image class="poster" src="{{ data.img }}"></image><view class="movie-info"><view class="title"><text class="name">{{ data.movie_name }}</text><image wx:if="{{ data.version === '2D' }}" class="tag" src="./images/2D.png"></image><image wx:if="{{ data.version === '3D' }}" class="tag" src="./images/3D.png"></image><image wx:if="{{ data.version === '2DIMAX' }}" class="longtag" src="./images/2DIMAX.png"></image><image wx:if="{{ data.version === '3DIMAX' }}" class="longtag" src="./images/3DIMAX.png"></image></view><view class="detail"><text class="gray">{{ data.hasReleased ? '评分：' : '想看：' }}</text><text wx:if="{{ data.hasReleased && data.movie_score }}" class="orange">{{ data.movie_score + '分' }}</text><text wx:elif="{{ data.hasReleased }}" class="gray">暂无</text><text wx:elif="{{ data.movie_expect_num }}" class="orange">{{ data.movie_expect_num + '人' }}</text><text wx:else class="gray">暂无</text></view><view class="detail"><text class="gray">类型：</text><view wx:for="{{ data.movie_type }}"><text class="border" wx:if="{{ index > 0 }}"></text><text class="value">{{ item }}</text></view><text class="gray" wx:if="{{ (!data.movie_type) || (data.movie_type && !data.movie_type.length) }}">暂无</text></view><view class="detail"><text class="gray">主演：</text><view wx:for="{{ data.movie_actors }}"><text class="border" wx:if="{{ index > 0 }}"></text><text class="value">{{ item }}</text></view><text wx:if="{{ !data.movie_actors.length }}" class="gray">暂无</text></view><view class="detail"><text class="gray">{{ data.hasReleased ? '场次：' : '上映：' }}</text><text wx:if="{{ data.hasReleased && data.movie_number }}" class="value">{{ data.movie_city }}共{{ data.movie_number }}场</text><text wx:elif="{{ data.hasReleased }}" class="gray">{{ data.movie_city }}今日暂无排片</text><text wx:elif="{{ data.movie_release_time }}" class="value">{{ data.movie_release_time }}</text><text wx:else class="gray">暂无</text></view><view class="detail last" wx:if="{{ data.movie_price }}"><text class="gray">价格：</text><text class="value">{{ data.movie_price }}元起</text></view></view></view></view><view class="no-result-wrapper" wx:else><text wx:if="{{ errMsg !== 'ok' }}" class="no-result">{{ errMsg }}</text><text wx:else class="no-result">未查询到{{ query }}的相关信息</text></view>