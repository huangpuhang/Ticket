<view class="movie-list" wx:if="{{ data }}"><view wx:for="{{ data.hotList }}" class="movie-cell {{ index === data.hotList.length - 1 ? 'last-movie-cell' : '' }}" bindtap="{{onTapMovie.bind(null, index)}}"><view class="movie-cell-column"><image class="poster" src="{{ item.img }}"></image></view><view class="movie-cell-column movie-cell-column-desc"><view class="title"><text class="name">{{ item.movie_name }}</text><image wx:if="{{ item.version === '2D' }}" class="tag" src="./images/2D.png"></image><image wx:if="{{ item.version === '3D' }}" class="tag" src="./images/3D.png"></image><image wx:if="{{ item.version === '2DIMAX' }}" class="longtag" src="./images/2DIMAX.png"></image><image wx:if="{{ item.version === '3DIMAX' }}" class="longtag" src="./images/3DIMAX.png"></image></view><view class="detail"><text class="gray">{{ item.hasReleased ? '评分：' : '想看：' }}</text><text wx:if="{{ item.hasReleased && item.movie_score }}" class="orange">{{ item.movie_score + '分' }}</text><text wx:elif="{{ !item.hasReleased }}" class="orange">{{ item.movie_expect }}</text><text wx:else class="gray">暂无</text></view><view class="detail"><text class="gray">主演：</text><view wx:for="{{ item.movie_actors }}" wx:for-item="actor"><text class="border" wx:if="{{ index > 0 }}"></text><text class="value">{{ actor }}</text></view><text wx:if="{{ !item.movie_actors.length }}" class="gray">暂无</text></view><view class="movie-cell-price detail" wx:if="{{ item.movie_price }}"><text class="value price">{{ item.movie_price }}元</text><text class="value">起</text></view></view></view><view class="movie-count" bindtap="{{onTapCount}}"><view><text>{{ data.remain_count }}部影片热映中，点击查看</text></view></view></view><view class="no-result-wrapper" wx:else><text class="no-result">未查询到电影票的相关信息</text></view>